<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeTracker.CategoryPage"
             Title="CategoryPage"
             Shell.NavBarIsVisible="False">
    <ScrollView>
        <VerticalStackLayout
            Spacing="20"
            Margin="20"
            MaximumWidthRequest="500"
            VerticalOptions="Center">
            <Label 
                x:Name="lbl_CategoryName"
                FontSize="Large"
                Margin="20,0"/>
            <Editor
                x:Name="tbx_CategoryName"/>
            <VerticalStackLayout 
                x:Name="lst_Processes"
                Spacing="5"/>
            <HorizontalStackLayout
                HorizontalOptions="Center"
                Spacing="10">
                <Button 
                    x:Name="btn_Save"
                    Text="Save"
                    Clicked="btn_Save_Clicked"
                    Padding="20, 0"
                    CornerRadius="20"/>
                <Button 
                    x:Name="btn_Discard"
                    Text="Cancel"
                    Clicked="btn_Discard_Clicked"
                    Padding="20, 0"
                    CornerRadius="20"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>